{
  "manifest_version": 3,
  "name": "YTM Enhancer",
  "version": "0.1.0",
  "description": "A modular extension that enhances the YouTube Music web experience",
  "permissions": ["activeTab", "notifications", "storage"],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "commands": {
    "play-pause": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Play or pause the current track"
    },
    "next-track": {
      "suggested_key": {
        "default": "Alt+Shift+N"
      },
      "description": "Skip to the next track"
    },
    "previous-track": {
      "suggested_key": {
        "default": "Alt+Shift+B"
      },
      "description": "Go to the previous track"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ytm-enhancer@example.com"
    }
  }
}
